
@{
    ViewBag.Title = "ElegirCategoria";
}

<style>
    .boton {
        margin-bottom: 10px;
    }
</style>

<h2>Elegir categoria</h2>
@foreach (int idCatPers in BD.dicCategorias.Keys)
{
    string CatPers = BD.dicCategorias[idCatPers];
    @Html.ActionLink(CatPers, "Juego", "Juego", new { nombre = CatPers }, new { @class = "btn btn-info boton" }) <br />
}

@Html.ActionLink("Todos", "Juego", "Juego", new { @class = "btn btn-info boton" }) <br />

