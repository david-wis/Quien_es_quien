
@{
    ViewBag.Title = "ElegirTipoPartida";
    List<string> listaTipos = ViewBag.ListaTipos;
}

<style>
    .boton {
        margin-bottom: 20px;
    }

    body {
        padding-bottom: 10px;
        background-color: darkorange;
    }

    .block { /* este es el largo de la pagina*/
        height: 210px;
        padding-bottom: 10px;
        background-color: darkorange;
    }

    .center {
        position: absolute;
        /*  top: 0;
    bottom: 0; */
        left: 0;
        right: 0;
        margin: auto;
    }

    h1 {
        font-family: Arial, sans-serif;
        font-weight: 900;
        -webkit-text-stroke: 2px black;
        text-shadow: 3px 5px red;
    }

    div1 {
        text-align: center;
        display: block;
        margin: 0 auto;
    }

    ul.dropdown-menu {
        margin-left: 35.5%;
    }
</style>



<body>

    <div1 class="jumbotron text-center" style="background-color:steelblue">
        <h1 style="color:white;font-size:650%">Elige el tipo de partida</h1>
    </div1>


    <div1 class="container col-lg-12 block">

        <div1 class="row col-xs-6 block2 bg-primary center">

            @Html.ActionLink(listaTipos[0], "ElegirModo", "Juego", new { nombre = listaTipos[0] }, new { @class = "btn btn-primary boton" }) <br />

            @Html.ActionLink(listaTipos[1], "ElegirModo", "Juego", new { nombre = listaTipos[1] }, new { @class = "btn btn-primary boton" }) <br />

            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    Jugar contra la IA
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink(listaTipos[2], "ElegirModo", "Juego", new { nombre = listaTipos[2] })</li>
                    <li>@Html.ActionLink(listaTipos[3], "ElegirModo", "Juego", new { nombre = listaTipos[3] })</li>
                    <li>@Html.ActionLink(listaTipos[4], "ElegirModo", "Juego", new { nombre = listaTipos[4] })</li>
                </ul>
            </div>
        </div1>
    </div1>
</body>
