@{  
    ViewBag.Title = "SalaEsperaSeleccionPersonajes";
}

<script>
    var inter = setInterval(VerificarJugador2, 3000);
    function VerificarJugador2() {
        jQuery.ajax({
            type: "GET",
            url: "@Url.Action("SalaEsperaSeleccionPersonajes", "Juego")",
            contentType: "charset=utf-8",
        });
        $("#test").load(window.location.href + " #test");//Cambiar por cookie en una version futura (si la hay)
        if ($("#test").text() == "1") {
            clearInterval(inter);//Aparentemente sino se ejecuta infinitamente y no logra salir
            var href = '@Url.Action("MultiplayerJuego", "Juego")';
            window.location.href = href;
        }
    }
</script>


<style>
    .loader {
        margin: auto auto;
        border: 16px solid #f3f3f3;
        border-radius: 50%;
        border-top: 16px solid #3498db;
        width: 120px;
        height: 120px;
        animation: spin 2s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

    body {
        padding-top: 5px;
        background-color: lightsteelblue;
    }

    .spacer {
        margin-top: 2%;
        margin-bottom: 2%;
    }

    .block { /* este es el largo de la pagina*/
        height: 320px;
        padding-top: 15px;
        background-color: lightsteelblue;
    }

    .block2 {
        min-height: 160px;
        padding-top: 35px;
    }

    .center {
        position: absolute;
        /*  top: 0;
    bottom: 0; */
        left: 0;
        right: 0;
        margin: auto;
    }

    h1 {
        font-family: Arial, sans-serif;
        font-weight: 900;
        -webkit-text-stroke: 2px #003326;
        text-shadow: 3px 5px rosybrown;
    }

    h2 {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-weight: 400;
        -webkit-text-stroke: 1px black;
        text-align: center;
    }
</style>

<div class="jumbotron text-center" style="background-color:indigo">
    <h1 style="color:white;font-size:400%">Sala de espera</h1>
</div>
<h2 style="color:white">Ahora, espere hasta que otro jugador elija un personaje :333</h2>
<div class="loader"></div>
<p id="test" style="visibility:hidden">@ViewBag.otroJugadorListo</p>
