@model Quien_es_Quien.Personaje
@{
    ViewBag.Title = "ModificarPersonaje";
}

<div class="jumbotron text-center">
    <h1>Modificar a @ViewBag.NomPersModificar</h1>
</div>

@using (Html.BeginForm("ModificarPersonaje", "BackOffice", FormMethod.Post, new { enctype = "multipart/form-data" }))
{   
<div class="form-group">
    @Html.Label("Nombre: ", new { @for = "nombre" /*@class = "control-label col-sm-2", */}) 
    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control", @id = "nombre" }) 
    @Html.ValidationMessageFor(x => x.Nombre, "", new { @style = "color:red" })
</div>

<div class="form-group">
    @Html.Label("Foto: ", new { @for = "foto" }) 
    @Html.TextBoxFor(x => x.Img, new { type = "file", @id = "foto" })
    @Html.ValidationMessageFor(x => x.RutaFoto, "", new { @style = "color:red" })
</div>

<div class="form-group">
    @Html.Label("Categoria: ", new { @for = "Categoria" }) 
    @Html.DropDownListFor(x => x.IDCategoria, new SelectList(BD.dicCategorias, "Key", "Value"), new { @class = "form-control", @id = "Categoria" }) 
    @Html.ValidationMessageFor(x => x.IDCategoria, "", new { @style = "color:red" }) <br />
    <input type="submit" name="Modificar" class="btn btn-info" />
</div>
}