@model Quien_es_Quien.Pregunta

@{
    ViewBag.Title = "AgregarPregunta";
}


<script>
    function Validar(e) {
        if ($("#Texto").val() == "") {
            alert("Si no tenes ninguna pregunta, para que viniste?");
            e.preventDefault();
        }
    }
</script>

<style>

    body {
        padding-bottom: 10px;
        background-color: lightsteelblue;
    }

    .center {
        position: absolute;
        /*  top: 0;
    bottom: 0; */
        left: 0;
        right: 0;
        margin: auto;
    }

    .form-control {
        margin: auto;
    }

    p {
        margin-top: 26.8%;
    }

    input {
        margin: auto;
    }

        input.btn.btn-info {
            margin-top: 0%;
        }

    div1 {
        text-align: center;
        display: block;
        margin: 0 auto;
    }

    h1 {
        font-family: Arial, sans-serif;
        font-weight: 900;
        -webkit-text-stroke: 2px #003326;
        text-shadow: 3px 5px rosybrown;
    }
    .col-xs-6 {
        width: 56%;
        height: 29000%;
    }
</style>

<body>

    <div1 class="jumbotron text-center" style="background-color:indigo">
        <h1 style="color:white;font-size:400%">Agregar pregunta</h1>
    </div1>

    <div1 class="container col-lg-12 block">

        <div1 class="row col-xs-6 block2 bg-primary center">

            @using (Html.BeginForm("AgregarPregunta", "BackOffice", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
            <div class="form-group">
                @Html.Label("Texto: ", new { @for = "Texto" })
                @Html.TextAreaFor(x => x.TextoPregunta, new { @class = "form-control", @id = "Texto" })
                @Html.ValidationMessageFor(x => x.TextoPregunta, null, new { @style = "color:red" })
            </div>

            <div class="form-group">
                @Html.Label("Valor: ", new { @for = "Valor" })
                @Html.TextBoxFor(x => x.Valor, new { type = "number", @class = "form-control", @id = "Valor" })
                @Html.ValidationMessageFor(x => x.Valor, null, new { @style = "color:red" })
            </div>

            <div class="form-group">
                @Html.Label("Categoria: ", new { @for = "Categoria" })
                @Html.DropDownListFor(x => x.IDCategoria, new SelectList(BD.dicCategoriasPreguntas, "Key", "Value"), new { @class = "form-control", @id = "Categoria" })
                @Html.ValidationMessageFor(x => x.IDCategoria, null, new { @style = "color:red" })
            </div>

                <input type="submit" name="Enviar" class="btn btn-info" onclick="Validar(event)"/>
            }
        </div1>
    </div1>
</body>

