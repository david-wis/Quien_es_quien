
@{
    ViewBag.Title = "Estadisticas";
}

<div class="jumbotron text-center" style="background-color:indigo">
    <h1 style="color:white;font-size:650%">Estadisticas</h1>
</div>

<h2>Jugaste @ViewBag.Jugadas partidas en total, de las cuales ganaste @ViewBag.Ganadas</h2>

<h2 style="color:silver"> Nuestros mejores jugadores</h2>

<style>
    .botoncito {
        background-color: lightsteelblue;
        border: hidden !important;
    }

    .filabotoncitos {
        border: hidden;
    }

    #colNombre {
        width: 62%;
        text-align: center;
    }

    #colPuntos {
        /*width:38%;*/
        text-align: center;
    }

    #tabla {
        width: 300px;
    }

    .boton {
        margin-top: 10px;
        margin-bottom: 10px;
    }

    #botoncito {
        margin: auto auto;
    }

    table, th, td {
        border: 1px solid black;
    }

    h1 {
        font-family: Arial, sans-serif;
        font-weight: 900;
        -webkit-text-stroke: 2px #003326;
        text-shadow: 3px 5px rosybrown;
    }

    h2 {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-weight: 400;
        -webkit-text-stroke: 1px black;
        text-align: center;
    }

    #tabla {
        width: 300px;
        margin: 0 auto;
    }

    body {
        padding-top: 2px;
        background-color: lightsteelblue;
    }

    p {
        margin-top: -1%;
    }

    hr {
        margin-top: 47px;
        margin-bottom: 20px;
        border: 0;
        border-top: 1px solid #eee;
    }

    th {
        background-color: violet;
        font-size: 18px;
    }

    td {
        background-color: gainsboro;
        font-size: 16px;
    }
</style>
<table id="tabla" class="table table-bordered">
    <tr>
        <th id="colNombre"><b>Nombre del jugador</b></th>
        <th id="colPuntos"><b>Sus puntos</b></th>
    </tr>
    @foreach (string nombreUsu in ViewBag.dicTop10.Keys)
    {
        int iPuntos = ViewBag.dicTop10[nombreUsu];
        <tr>
            <td>@nombreUsu</td>
            <td>@iPuntos</td>
        </tr>
    }
        <tr class="filabotoncitos">
            <td class="botoncito">
                @if (Convert.ToBoolean(Session["administrador"]))
                {
                    @Html.ActionLink("Volver al BackOffice", "IndexAdmins", "BackOffice", null, new { @class = "btn btn-primary boton" })
                }
            </td>
            <td class="botoncito">
                @Html.ActionLink("Volver a jugar", "ElegirModoJuego", "Juego", new { @class = "btn btn-primary boton" })
            </td>
         </tr>
</table>

